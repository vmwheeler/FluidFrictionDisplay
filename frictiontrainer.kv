#:kivy 1.11.1

<FrictionDisplay>:    
    
                
    # this boxlayout represents the whole display
    BoxLayout:
        
        orientation:'vertical'
        size: root.width, root.height
    
 
        canvas:
            Color:
                rgba: root.bgcol
            Rectangle:
                size: self.size


        # This is the first widget in the above boxlayout making the top box
        BoxLayout:
            
            orientation: 'horizontal'
            
            Label:
                size: root.width, root.height
                canvas.before:
                    Color:
                        rgba: root.tcol
                    Line:
                        width: 6
                        rectangle: self.x, self.y, self.width, self.height
                
                color: root.tcol
                #color: root.tcol.r, root.tcol.g, root.tcol.b, root.tcol.a
                markup: True
                font_size: root.font_size
                text: '| p[sub]2[/sub] - p[sub]1[/sub] |' + '\n' + str(root.pdiff)

                        
        # this is the second element        
        BoxLayout:
        
            orientation: 'horizontal'
            size_hint: [1,0.25]
            
            BoxLayout:
                orientation: 'vertical'

                canvas.before:
                    Color:
                        rgba: root.pcol
                    Rectangle:
                        pos: self.pos   
                        size: self.size
                    Color:
                        rgba: root.tcol
                    Line:
                        width: 6
                        rectangle: self.x, self.y, self.width, self.height
                
                Label:
                    color: root.tcol
                    font_size: root.font_size
                    markup: True
                    text: "p[sub]1[/sub]" 

            
                Label:
                    color: root.tcol
                    font_size: root.font_size
                    text: str(root.ps1.data)
                
            
            BoxLayout:
                orientation: 'vertical'

                canvas.before:
                    Color:
                        rgba: root.pcol
                    Rectangle:
                        pos: self.pos   
                        size: self.size
                    Color:
                        rgba: root.tcol
                    Line:
                        width: 6
                        rectangle: self.x, self.y, self.width, self.height
                
                Label:
                    color: root.tcol
                    font_size: root.font_size
                    markup: True
                    text: "p[sub]2[/sub]" 

            
                Label:
                    color: root.tcol
                    font_size: root.font_size
                    text: str(root.ps2.data)

        
    

